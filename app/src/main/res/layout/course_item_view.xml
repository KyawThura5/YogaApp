<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="20dp"
    android:background="#FFEB3B">
    
    <TextView
        android:id="@+id/txtViewDayOfWeek"
        android:textSize="21sp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtViewTimeOfCourse"
        android:textSize="21sp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtViewTypeOfClass"
        android:textSize="21sp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:padding="10dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnShowDetailCourse"
            android:src="@drawable/icon_show"
            android:background="@color/Green"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"/>

        <ImageButton
            android:id="@+id/btnAddClass"
            android:src="@drawable/icon_add"
            android:background="@color/Green"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"/>
        
        <ImageButton
            android:id="@+id/btnEditCourse"
            android:src="@drawable/icon_edit"
            android:background="@color/Green"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"/>

        <ImageButton
            android:id="@+id/btnDeleteCourse"
            android:src="@drawable/icon_delete"
            android:background="@color/Green"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        
        
    </LinearLayout>



</LinearLayout>